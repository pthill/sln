<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sln.dao.shop.write.flash.ActFlashSaleStageWriteDao">
	<resultMap id="ActFlashSaleStageResult" type="com.sln.entity.flash.ActFlashSaleStage">
			<result property="id" column="id" />
			<result property="actFlashSaleId" column="act_flash_sale_id" />
			<result property="startTime" column="start_time" />
			<result property="endTime" column="end_time" />
			<result property="remark" column="remark" />
	</resultMap>
	
	<select id="get" parameterType="Integer" resultMap="ActFlashSaleStageResult">
		select
		   *
		from `act_flash_sale_stage`
		where `id` = #{id}
	</select>
	
	<update id="update" parameterType="com.sln.entity.flash.ActFlashSaleStage">
        update `act_flash_sale_stage` 
    	<set>
			<!-- <if test="id != null">`id`= #{id},</if> -->
			<if test="actFlashSaleId != null">`act_flash_sale_id`= #{actFlashSaleId},</if>
			<if test="startTime != null">`start_time`= #{startTime},</if>
			<if test="endTime != null">`end_time`= #{endTime},</if>
			<if test="remark != null">`remark`= #{remark}</if>
	    </set>
        where `id` = #{id}
	</update>
	
	<insert id="insert" parameterType="com.sln.entity.flash.ActFlashSaleStage" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into 
		`act_flash_sale_stage`
		(
			`act_flash_sale_id`,
			`start_time`,
			`end_time`,
			`remark`
		)
		values
		(
			#{actFlashSaleId},
			#{startTime},
			#{endTime},
			#{remark}
		)
	</insert>
	
	<delete id="delete">
        delete from `act_flash_sale_stage` where `id` = #{id}
	</delete>
	
	<delete id="deleteByActFlashSaleId">
        delete from `act_flash_sale_stage` where `act_flash_sale_id` = #{actFlashSaleId}
	</delete>
	
	<insert id="batchInsert" parameterType="java.util.List">
        insert into 
		`act_flash_sale_stage`
		(
			`act_flash_sale_id`,
			`start_time`,
			`end_time`,
			`remark`
		)
		values
	   <foreach collection="list" item="item" index="index" separator=","> 
	    (
	    	#{item.actFlashSaleId},
			#{item.startTime},
			#{item.endTime},
			#{item.remark}
	    )
	   </foreach>
	</insert>
	
</mapper>
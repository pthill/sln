<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sln.dao.shop.write.operate.CourierCompanyWriteDao">
	<resultMap id="CourierCompanyResult" type="com.sln.entity.operate.CourierCompany">
			<result property="id" column="id" />
			<result property="createTime" column="create_time" />
			<result property="state" column="state" />
			<result property="companyMark" column="company_mark" />
			<result property="companyName" column="company_name" />
			<result property="seq" column="seq" />
			<result property="sellerId" column="seller_id" />
			<result property="companyType" column="company_type" />
			<result property="imagePath" column="image_path" />
			<result property="content" column="content" />
	</resultMap>
	<select id="get" parameterType="Integer" resultMap="CourierCompanyResult">
		select
		   *
		from `courier_company`
		where `id` = #{id}
	</select>
	
	<select id="getCount" parameterType="java.util.Map"
		resultType="java.lang.Integer">
		select count(1) from courier_company t1
		<include refid="whereConditions" />
	</select>
	
	<delete id="del">
        delete from `courier_company` where `id` = #{id}
	</delete>
	
	<select id="page" resultType="com.sln.entity.operate.CourierCompany">
		select * from courier_company t1
		<include refid="whereConditions" />
		order by seq asc, create_time desc
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
	</select>
	
	<select id="list" resultType="com.sln.entity.operate.CourierCompany">
		select * from courier_company t1
		order by seq asc, create_time desc
	</select>
	
	<update id="update" parameterType="com.sln.entity.operate.CourierCompany">
        update `courier_company` 
    	<set>
			<!-- <if test="id != null">`id`= #{id},</if> -->
			<!-- <if test="createTime != null">`create_time`= #{createTime},</if> -->
			<if test="state != null">`state`= #{state},</if>
			<if test="companyMark != null">`company_mark`= #{companyMark},</if>
			<if test="companyName != null">`company_name`= #{companyName},</if>
			<if test="seq != null">`seq`= #{seq},</if>
			<if test="sellerId != null">`seller_id`= #{sellerId},</if>
			<if test="companyType != null">`company_type`= #{companyType},</if>
			<if test="imagePath != null">`image_path`= #{imagePath},</if>
			<if test="content != null">`content`= #{content}</if>
	    </set>
        where `id` = #{id}
	</update>
	
	<insert id="save" parameterType="com.sln.entity.operate.CourierCompany" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into 
		`courier_company`
		(
			
			`create_time`,
			`state`,
			`company_mark`,
			`company_name`,
			`seq`,
			`seller_id`,
			`company_type`,
			`image_path`,
			`content`
		)
		values
		(
			
			now(),
			#{state},
			#{companyMark},
			#{companyName},
			#{seq},
			#{sellerId},
			#{companyType},
			#{imagePath},
			#{content}
		)
	</insert>
	
	<sql id="whereConditions">
		<where>
			1=1
			<if test="param1.q_companyName != null and param1.q_companyName != ''">
				and t1.`company_Name` like CONCAT('%',#{param1.q_companyName},'%')
			</if>
			<if test="param1.sellerId != null and param1.sellerId != ''">
				and t1.`seller_id` = #{param1.sellerId}
			</if>
			<if test="param1.q_companyType != null and param1.q_companyType != ''">
				and t1.`company_Type` = #{param1.q_companyType}
			</if>
		</where>
	</sql>
	
</mapper>
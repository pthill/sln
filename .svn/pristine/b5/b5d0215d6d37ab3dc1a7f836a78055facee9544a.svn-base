#PayforBox{background:#fff4e8;padding-bottom: 50px;}
			.order-information .p-left{
				float: left;
				width: 640px;
				padding-top: 10px;
				padding-bottom: 10px;
				padding-left: 30px;
				/*font-family: "微软雅黑";*/
			}
			.order-information .p-title{
				line-height: 26px;
				height: 26px;
				overflow: hidden;
				font-size: 16px;
				margin-top:0px;
				margin-bottom: 5px;
				font-weight: bold;
			}
			.order-information .p-tips{
				line-height: 20px;
				height: 20px;
				margin-bottom: 0px;
				font-size:14px;
			}
			.order-information .font-red{
				color:#ed6f05;
			}
			.order-information .p-right{
				float: right;
				width: 190px;
				padding-top: 10px;
				padding-bottom: 10px;
				margin-right: 125px;
				overflow: hidden;
				/*font-family: "微软雅黑";*/
			}
			.order-information .pay-price{
				text-align: right;
				line-height: 26px;
				margin-bottom: 4px;
			}
			.order-information .pay-price strong{
				font-size: 18px;
				vertical-align: bottom;
				color: #ed6f05;
				margin: 0 3px;
			}
			.payment{
				border-top: 4px solid #ed6f05;
				background-color: #fff;
				padding: 12px 30px 0;
			}
			.clr{
				display: block;
				overflow: hidden;
				clear: both;
				height: 0;
				line-height: 0;
				font-size: 0;
			}
			.order-information .o-list{
				padding: 12px 0 25px;
				margin: 0 30px;
				border-top: 1px solid #ddd;
				/*font-family: "微软雅黑";*/
			}
			.o-list-info{line-height: 24px;}
			.mr10{margin-right: 10px;}
			.paybox{
				border-bottom: 1px solid #ddd;
  				padding: 0 2px 1px;
  			}
  			.p-wrap{
  				padding-top:22px;
  				padding-bottom: 20px;
  			}
  			.p-wrap ul{height:60px;}
  			.p-wrap ul li{
  				float: left;
  				margin-right: 70px;
  			}
  			.img-pay{
				width: 127px;
				height: 32px;
				float: left;
				/*border: 1px solid #ddd;*/
				margin-left: 20px;
				margin-top: 6px;
  			}
  			.p-wrap input[type=radio]{
  				margin:18px 0 0;
  			}
  			.bt0{
  				border-bottom: 0px;
  			}
  			.p-wrap ul li input{float: left;}
  			.payment-column{
				height: 10px;
				line-height: 10px;
				font-size: 0;
				background: #FCF5F5;
				width: 1220px;
				margin-left: -30px;
  			}
  			.PayforSubmit{
  				height: 50px;
				line-height: 48px;
				padding: 0;
				font-size: 18px;
				width: 220px;
				font-family: "Microsoft Yahei";
				font-weight: 700;
				text-shadow: 0 1px 2px rgba(0,0,0,.3);
  			}
  			#PayButtom{
				display: inline-block;
				/*height: 32px;*/
				/*line-height: 32px;*/
				/*padding: 0 28px;*/
				color: #fff;
				border: none;
				border: 1px solid #f96765;
				background-color: #ff7573;
				background-repeat: repeat-x;
				background-image: -moz-linear-gradient(top,#ff7573,#f96765);
				background-image: -webkit-linear-gradient(top,#ff7573,#f96765);
				background-image: -o-linear-gradient(top,#ff7573,#f96765);
				background-image: linear-gradient(top,#ff7573,#f96765);
				filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ff7573', endColorstr='#f96765', GradientType=0);
				border-radius: 2px;
				vertical-align: middle;
				cursor: pointer;
				text-align: center;
				text-shadow: 0 1px 2px rgba(0,0,0,.2);
				box-shadow: 0 1px 0 0 #fe8c8a inset;
  			}
  			.pv-button{
  				padding:35px;
  			}
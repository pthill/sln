<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sln.dao.shop.write.member.InvoiceWriteDao">
	<resultMap id="InvoiceResult" type="com.sln.entity.order.Invoice">
			<result property="id" column="id" />
			<result property="content" column="content" />
			<result property="state" column="state" />
			<result property="createId" column="create_id" />
			<result property="createTime" column="create_time" />
	</resultMap>
	
	<select id="get" parameterType="Integer" resultMap="InvoiceResult">
		select
		   *
		from `invoice`
		where `id` = #{id}
	</select>
	
	<select id="getByMId" parameterType="Integer" resultMap="InvoiceResult">
		select
		   *
		from `invoice`
		where `create_id` = #{memberId}
		and `state` = 1
	</select>
	
	<delete id="delete" parameterType="Integer" >
		delete from `invoice` where `id` = #{id}
	</delete>
	
	<update id="update" parameterType="com.sln.entity.order.Invoice">
        update `invoice` 
    	<set>
			<!-- <if test="id != null">`id`= #{id},</if> -->
			<if test="content != null">`content`= #{content},</if>
			<if test="state != null">`state`= #{state},</if>
			<!-- <if test="createId != null">`create_id`= #{createId},</if> -->
	    </set>
        where `id` = #{id}
	</update>
	
	<insert id="save" parameterType="com.sln.entity.order.Invoice" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into `invoice`
		(
			`content`,
			`state`,
			`create_id`,
			`create_time`
		)
		values
		(
			#{content},
			#{state},
			#{createId},
			now()
		)
	</insert>
	
	
	   

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sln.dao.shop.read.member.MemberCollectionSellerReadDao">
	<resultMap id="MemberCollectionSellerResult" type="com.sln.entity.member.MemberCollectionSeller">
			<result property="id" column="id" />
			<result property="memberId" column="member_id" />
			<result property="sellerId" column="seller_id" />
			<result property="createTime" column="create_time" />
			<result property="updateTime" column="update_time" />
			<result property="state" column="state" />
	</resultMap>
   
	<!-- 查询条件 -->
	<sql id="Where_Clause">
		where 1=1
		<trim  suffixOverrides="," >
		<if test="memberId != null and memberId != ''" >
			    and member_id =  #{memberId}
			</if>
		<if test="sellerId != null and sellerId != ''" >
			    and seller_id =  #{sellerId}
			</if>
		<if test="state != null and state != ''" >
			    and state =  #{state}
			</if>
		</trim>
	</sql>
	
	
	<select id="get" parameterType="Integer" resultMap="MemberCollectionSellerResult">
		select
		   *
		from `member_collection_seller`
		where `id` = #{id}
	</select>

	<!-- 会员收藏商铺表 列表总数-->
	<select id="queryCount" resultType="java.lang.Integer"  parameterType="map">
		select count(1) from member_collection_seller 
		<include refid="Where_Clause"/>
	</select>
		
	<!-- 查询会员收藏商铺表列表 -->
	<select id="queryList" resultMap="MemberCollectionSellerResult"  parameterType="map">
		select  *
		from member_collection_seller 
		<include refid="Where_Clause"/>
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
	</select>
	
	<select id="getCountBySellerId" parameterType="Integer" resultType="java.lang.Integer">
		select count(1) from member_collection_seller 
		where `seller_id` = #{sellerId}
		and `state` = 1
	</select>	
</mapper>
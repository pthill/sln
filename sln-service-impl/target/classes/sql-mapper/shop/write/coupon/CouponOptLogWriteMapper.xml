<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sln.dao.shop.write.coupon.CouponOptLogWriteDao">
	<resultMap id="CouponOptLogResult" type="com.sln.entity.coupon.CouponOptLog">
			<result property="id" column="id" />
			<result property="couponUserId" column="coupon_user_id" />
			<result property="memberId" column="member_id" />
			<result property="sellerId" column="seller_id" />
			<result property="couponId" column="coupon_id" />
			<result property="optType" column="opt_type" />
			<result property="orderId" column="order_id" />
			<result property="createUserId" column="create_user_id" />
			<result property="createUserName" column="create_user_name" />
			<result property="createTime" column="create_time" />
	</resultMap>
	
	<select id="get" parameterType="Integer" resultMap="CouponOptLogResult">
		select
		   *
		from `coupon_opt_log`
		where `id` = #{id}
	</select>
	
	<update id="update" parameterType="com.sln.entity.coupon.CouponOptLog">
        update `coupon_opt_log` 
    	<set>
			<!-- <if test="id != null">`id`= #{id},</if> -->
			<if test="couponUserId != null">`coupon_user_id`= #{couponUserId},</if>
			<if test="memberId != null">`member_id`= #{memberId},</if>
			<if test="sellerId != null">`seller_id`= #{sellerId},</if>
			<if test="couponId != null">`coupon_id`= #{couponId},</if>
			<if test="optType != null">`opt_type`= #{optType},</if>
			<if test="orderId != null">`order_id`= #{orderId},</if>
			<!-- <if test="createUserId != null">`create_user_id`= #{createUserId},</if>
			<if test="createUserName != null">`create_user_name`= #{createUserName},</if>
			<if test="createTime != null">`create_time`= #{createTime}</if> -->
	    </set>
        where `id` = #{id}
	</update>
	
	<insert id="insert" parameterType="com.sln.entity.coupon.CouponOptLog" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into 
		`coupon_opt_log`
		(
			`coupon_user_id`,
			`member_id`,
			`seller_id`,
			`coupon_id`,
			`opt_type`,
			`order_id`,
			`create_user_id`,
			`create_user_name`,
			`create_time`
		)
		values
		(
			#{couponUserId},
			#{memberId},
			#{sellerId},
			#{couponId},
			#{optType},
			#{orderId},
			#{createUserId},
			#{createUserName},
			now()
		)
	</insert>

	<insert id="batchInsertCouponOptLog" parameterType="java.util.List">
        insert into 
		`coupon_opt_log`
		(
			`coupon_user_id`,
			`member_id`,
			`seller_id`,
			`coupon_id`,
			`opt_type`,
			`order_id`,
			`create_user_id`,
			`create_user_name`,
			`create_time`
		)
		values
	   <foreach collection="list" item="item" index="index" separator=","> 
	    (
	    	#{item.couponUserId},
			#{item.memberId},
			#{item.sellerId},
			#{item.couponId},
			#{item.optType},
			#{item.orderId},
			#{item.createUserId},
			#{item.createUserName},
			now()
	    )
	   </foreach>
	</insert>

</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sln.dao.shop.write.group.ActGroupTypeWriteDao">
	<resultMap id="ActGroupTypeResult" type="com.sln.entity.group.ActGroupType">
			<result property="id" column="id" />
			<result property="name" column="name" />
			<result property="sort" column="sort" />
			<result property="state" column="state" />
			<result property="createId" column="create_id" />
			<result property="createName" column="create_name" />
			<result property="updateId" column="update_id" />
			<result property="updateName" column="update_name" />
			<result property="createTime" column="create_time" />
			<result property="updateTime" column="update_time" />
	</resultMap>
	
	<select id="get" parameterType="Integer" resultMap="ActGroupTypeResult">
		select
		   *
		from `act_group_type`
		where `id` = #{id}
	</select>
	
	<update id="update" parameterType="com.sln.entity.group.ActGroupType">
        update `act_group_type` 
    	<set>
			<if test="name != null">`name`= #{name},</if>
			<if test="sort != null">`sort`= #{sort},</if>
			<if test="state != null">`state`= #{state},</if>
			<if test="createId != null">`create_id`= #{createId},</if>
			<if test="createName != null">`create_name`= #{createName},</if>
			<if test="updateId != null">`update_id`= #{updateId},</if>
			<if test="updateName != null">`update_name`= #{updateName},</if>
			`update_time`= now()
	    </set>
        where `id` = #{id}
	</update>
	
	<update id="audit" parameterType="Integer">
        update `act_group_type` 
    	set
			`state`= #{state}
        where `id` = #{id}
	</update>
	
	<delete id="del">
		DELETE FROM `act_group_type` WHERE `id` = #{id}
	</delete>
	
	<insert id="insert" parameterType="com.sln.entity.group.ActGroupType" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into 
		`act_group_type`
		(
			`name`,
			`sort`,
			`state`,
			`create_id`,
			`create_name`,
			`update_id`,
			`update_name`,
			`create_time`,
			`update_time`
		)
		values
		(
			#{name},
			#{sort},
			#{state},
			#{createId},
			#{createName},
			#{updateId},
			#{updateName},
			now(),
			now()
		)
	</insert>
	
</mapper>
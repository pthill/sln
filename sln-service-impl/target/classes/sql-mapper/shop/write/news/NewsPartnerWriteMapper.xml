<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sln.dao.shop.write.news.NewsPartnerWriteDao">
	<resultMap id="NewsPartnerResult" type="com.sln.entity.news.NewsPartner">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="image" column="image" />
		<result property="url" column="url" />
		<result property="sort" column="sort" />
		<result property="status" column="status" />
		<result property="createId" column="create_id" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
	</resultMap>
	<select id="get" parameterType="Integer" resultMap="NewsPartnerResult">
		select
		   *
		from `news_partner`
		where `id` = #{id}
	</select>
	
	<delete id="del">
        delete from `news_partner` where `id` = #{id}
	</delete>
	
	<update id="update" parameterType="com.sln.entity.news.NewsPartner">
        update `news_partner` 
		<set>
			<if test="id != null">`id`= #{id},</if>
			<if test="name != null">`name`= #{name},</if>
			<if test="image != null">`image`= #{image},</if>
			<if test="url != null">`url`= #{url},</if>
			<if test="sort != null">`sort`= #{sort},</if>
			<if test="status != null">`status`= #{status},</if>
			<if test="createId != null">`create_id`= #{createId},</if>
			<if test="createTime != null">`create_time`= #{createTime},</if>
			<if test="updateTime != null">`update_time`= #{updateTime}</if>
		</set>
        where `id` = #{id}
	</update>
	
	<insert id="save" parameterType="com.sln.entity.news.NewsPartner" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into 
		`news_partner`
		(
			
			`name`,
			`image`,
			`url`,
			`sort`,
			`status`,
			`create_id`,
			`create_time`,
			`update_time`
		)
		values
		(
			
			#{name},
			#{image},
			#{url},
			#{sort},
			#{status},
			#{createId},
			#{createTime},
			#{updateTime}
		)
	</insert>
	
</mapper>
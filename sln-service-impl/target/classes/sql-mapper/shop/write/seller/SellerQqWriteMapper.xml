<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sln.dao.shop.write.seller.SellerQqWriteDao">
	<resultMap id="SellerQqResult" type="com.sln.entity.seller.SellerQq">
		<result property="id" column="id" />
		<result property="sellerId" column="seller_id" />
		<result property="qq" column="qq" />
		<result property="createId" column="create_id" />
		<result property="createTime" column="create_time" />
		<result property="state" column="state" />
		<result property="name" column="name" />
	</resultMap>

	<select id="getInusedSellerQqBySId" parameterType="Integer" resultMap="SellerQqResult">
		select
		   *
		from `seller_qq`
		where `seller_id` = #{sellerId}
			and `state` = 1
	</select>

	<select id="get" parameterType="Integer" resultMap="SellerQqResult">
		select
		   *
		from `seller_qq`
		where `id` = #{id}
	</select>
	
	<select id="getCount" parameterType="java.util.Map"
		resultType="java.lang.Integer">
		select count(1) from seller_qq t1
		<include refid="whereConditions" />
	</select>
	
	<delete id="del">
        delete from `seller_qq` where `id` = #{id}
	</delete>
	
	<select id="page" resultType="com.sln.entity.seller.SellerQq">
		select * from seller_qq t1
		<include refid="whereConditions" />
		order by create_time desc
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
	</select>
	
	<select id="list" resultType="com.sln.entity.seller.SellerQq">
		select * from seller_qq t1
		order by create_time desc
	</select>
	
	<update id="update" parameterType="com.sln.entity.seller.SellerQq">
        update `seller_qq` 
		<set>
			<!-- <if test="id != null">`id`= #{id},</if> -->
			<if test="sellerId != null">`seller_id`= #{sellerId},</if>
			<if test="qq != null">`qq`= #{qq},</if>
			<!-- <if test="createId != null">`create_id`= #{createId},</if> -->
			<!-- <if test="createTime != null">`create_time`= #{createTime},</if> -->
			<if test="state != null">`state`= #{state},</if>
			<if test="name != null">`name`= #{name}</if>
		</set>
        where `id` = #{id}
	</update>
	
	<insert id="save" parameterType="com.sln.entity.seller.SellerQq" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into `seller_qq`
		(
			`seller_id`,
			`qq`,
			`create_id`,
			`create_time`,
			`state`,
			`name`
		)
		values
		(
			#{sellerId},
			#{qq},
			#{createId},
			now(),
			#{state},
			#{name}
		)
	</insert>
	
	<!-- 查询条件 -->
	<sql id="whereConditions">
		where 1=1
		<trim  suffixOverrides="," >
			<if test="id != null and id !=''"  > and `id`= #{id}</if>
			<if test="sellerId != null and sellerId !=''"  > and `seller_id`= #{sellerId}</if>
			<if test="qq != null and qq !=''"  > and `qq`= #{qq}</if>
			<if test="q_qq != null and q_qq != ''">
				and t1.`qq` = #{q_qq}
			</if>
			<if test="createId != null and createId !=''"  > and `create_id`= #{createId}</if>
			<if test="createTime != null and createTime !=''"  > and `create_time`= #{createTime}</if>
			<if test="state != null and state !=''"  > and `state`= #{state}</if>
			<if test="q_state != null and q_state !=''"  > and `state`= #{q_state}</if>
			<if test="name != null and name !=''"  > and `name`= #{name}</if>
		</trim>
	</sql>
	
</mapper>
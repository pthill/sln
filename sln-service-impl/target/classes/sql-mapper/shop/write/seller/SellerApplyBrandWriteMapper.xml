<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sln.dao.shop.write.seller.SellerApplyBrandWriteDao">

    <select id="getById" resultType="com.sln.entity.seller.SellerApplyBrand">
        select * from seller_apply_brand where id = #{id}
    </select>

    <select id="getByName" resultType="java.lang.Integer">
        select count(1) from seller_apply_brand where name = #{name}
    </select>

    <select id="count" resultType="java.lang.Integer">
        select count(1) from seller_apply_brand t1
        <include refid="whereConditions"/>
    </select>

    <select id="page" resultType="com.sln.entity.seller.SellerApplyBrand">
        select * from seller_apply_brand t1
        <include refid="whereConditions"/>
        order by id desc
        <if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>

    <insert id="save" parameterType="com.sln.entity.seller.SellerApplyBrand">
        insert into seller_apply_brand (<include refid="column"/>)
        values(
            #{sellerId},#{name},#{nameFirst},#{image},#{createId},#{createName},now(),#{updateId},#{updateName}, now(),#{explainInfo},0
        )
    </insert>

    <update id="update">
        update seller_apply_brand
        <set>
            update_time = now(),
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="nameFirst != null and nameFirst != ''">
                name_first = #{nameFirst},
            </if>
            <if test="image != null and image != ''">
                image = #{image},
            </if>
            <if test="explainInfo != null and explainInfo != ''">
                explain_info = #{explainInfo},
            </if>
            <if test="updateId != null">
                update_id = #{updateId},
            </if>
            <if test="updateName != null and updateName != ''">
                update_name = #{updateName},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
        </set>
        where id = #{id}
    </update>

    <sql id="column">
        `seller_id`,`name`,`name_first`,`image`,`create_id`,`create_name`,`create_time`,`update_id`,`update_name`,`update_time`,`explain_info`,`state`
    </sql>

    <sql id="whereConditions">
        <where>
            state != 4
            <if test="param1.q_sellerId != null">
                and t1.`seller_id` = #{param1.q_sellerId}
            </if>
            <if test="param1.q_name != null and param1.q_name != ''">
                and t1.`name` like CONCAT('%',#{param1.q_name},'%')
            </if>
            <if test="param1.q_state != null and param1.q_state != ''">
                and t1.`state` = #{param1.q_state}
            </if>
        </where>
    </sql>

    <select id="todoList" resultType="com.sln.entity.seller.SellerApplyBrand">
        select * from seller_apply_brand t1
        where state in (0, 3)
        <if test="param1.q_name != null and param1.q_name != ''">
            and t1.`name` like CONCAT('%',#{param1.q_name},'%')
        </if>
        <if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>
    <select id="todoCount" resultType="java.lang.Integer">
        select count(1) from seller_apply_brand t1
        where state in (0, 3)
        <if test="param1.q_name != null and param1.q_name != ''">
            and t1.`name` like CONCAT('%',#{param1.q_name},'%')
        </if>
    </select>
</mapper>
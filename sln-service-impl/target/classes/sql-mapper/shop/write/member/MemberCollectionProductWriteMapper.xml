<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sln.dao.shop.write.member.MemberCollectionProductWriteDao">
	<resultMap id="MemberCollectionProductResult" type="com.sln.entity.member.MemberCollectionProduct">
			<result property="id" column="id" />
			<result property="memberId" column="member_id" />
			<result property="productId" column="product_id" />
			<result property="createTime" column="create_time" />
			<result property="updateTime" column="update_time" />
			<result property="state" column="state" />
	</resultMap>
	<select id="get" parameterType="Integer" resultMap="MemberCollectionProductResult">
		select
		   *
		from `member_collection_product`
		where `id` = #{id}
	</select>
	
	<update id="update" parameterType="com.sln.entity.member.MemberCollectionProduct">
        update `member_collection_product` 
    	<set>
			<!-- <if test="id != null">`id`= #{id},</if> -->
			<if test="memberId != null">`member_id`= #{memberId},</if>
			<if test="productId != null">`product_id`= #{productId},</if>
			<!-- <if test="createTime != null">`create_time`= #{createTime},</if> -->
			<if test="state != null">`state`= #{state},</if>
			`update_time`= now()
	    </set>
        where `id` = #{id}
	</update>
	
	<insert id="save" parameterType="com.sln.entity.member.MemberCollectionProduct" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into 
		`member_collection_product`
		(
			`member_id`,
			`product_id`,
			`create_time`,
			`state`
		)
		values
		(
			#{memberId},
			#{productId},
			now(),
			#{state}
		)
	</insert>

	<select id="getByMIdAndPId" resultMap="MemberCollectionProductResult">
		select
		   *
		from `member_collection_product`
		where `member_id` = #{memberId}
		and `product_id`= #{productId}
	</select>
</mapper>